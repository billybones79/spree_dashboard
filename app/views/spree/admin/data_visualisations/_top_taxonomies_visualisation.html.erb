<div class="panel panel-default categories">
  <div class="panel-heading">
    <h3><%= t('index.best_categories') %></h3>
  </div>
  <div class="panel-body">
    <% top_taxo.each do |category, best| %>
        <h4><%= category %></h4>
        <ul class="list-group">
          <% best.each do |b| %>
              <li class="list-group-item">
                <span class="number"><%= b[:value] %></span>
                <%= b[:name] %>
              </li>
          <% end %>
        </ul>
    <% end %>
  </div>
</div>